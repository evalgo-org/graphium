{
  "@context": "https://schema.org",
  "@type": "CheckAction",
  "name": "TLS Certificate Check - pantopix.com",
  "description": "Monitor TLS certificate expiration for pantopix.com. Warns 30 days before expiration.",
  "agent": "localhost-docker",
  "actionStatus": "PotentialActionStatus",
  "enabled": true,
  "startTime": null,
  "endTime": null,
  "schedule": {
    "@type": "Schedule",
    "repeatFrequency": "P1D",
    "scheduleTimezone": "UTC",
    "byDay": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
  },
  "instrument": {
    "checkType": "tls-certificate",
    "url": "https://pantopix.com:443",
    "warnDays": 30
  },
  "object": {
    "@type": "URL",
    "url": "https://pantopix.com:443"
  }
}
