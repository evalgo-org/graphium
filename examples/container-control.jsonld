{
  "@context": "https://schema.org",
  "@type": "ControlAction",
  "name": "Weekly Nginx Restart",
  "description": "Weekly restart of nginx container for maintenance. Runs every Sunday at midnight.",
  "agent": "localhost-docker",
  "actionStatus": "PotentialActionStatus",
  "enabled": true,
  "startTime": null,
  "endTime": null,
  "schedule": {
    "@type": "Schedule",
    "repeatFrequency": "P1W",
    "scheduleTimezone": "America/New_York",
    "byDay": ["Sunday"]
  },
  "instrument": {
    "action": "restart",
    "containerId": "nginx-multihost-nginx-1",
    "timeout": 30
  },
  "object": {
    "@type": "SoftwareApplication",
    "name": "nginx-multihost",
    "identifier": "nginx-multihost-nginx-1"
  }
}
