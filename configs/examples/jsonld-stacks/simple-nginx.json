{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@id": "https://graphium.local/stacks/simple-nginx",
      "@type": ["datacenter:Stack", "SoftwareApplication"],
      "name": "simple-nginx",
      "description": "Simple single-container nginx web server",
      "hasPart": [
        {
          "@id": "https://graphium.local/containers/nginx-web",
          "@type": "datacenter:Container",
          "name": "web",
          "image": "nginx:alpine",
          "description": "Nginx web server",
          "ports": [
            {
              "containerPort": 80,
              "hostPort": 8080,
              "protocol": "tcp"
            }
          ],
          "environment": {
            "NGINX_HOST": "localhost",
            "NGINX_PORT": "80"
          },
          "labels": {
            "app": "nginx",
            "tier": "web"
          },
          "restartPolicy": "unless-stopped"
        }
      ]
    }
  ]
}
